<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.note"
    android:versionCode="1"
    android:versionName="1.0" >
    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />
   
    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar">
        
  		<activity 
  		    android:name=".activity.SplashScreenActivity"
  		    android:screenOrientation="portrait"
  		    android:configChanges="keyboardHidden|orientation"
  		    android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		
		<activity 
		    android:name=".activity.MainActivity"
			android:screenOrientation="portrait" 
			android:configChanges="keyboardHidden|orientation"
			 android:windowSoftInputMode="stateHidden|stateAlwaysHidden"    />
		
        <activity 
            android:name=".activity.TestActivity"
             android:screenOrientation="portrait" 
            android:configChanges="keyboardHidden|orientation" /> 
            
        <activity 
            android:name=".activity.AddOrEditCountActivity"
             android:screenOrientation="portrait" 
            android:configChanges="keyboardHidden|orientation" />          
            
         <activity 
            android:name=".activity.NoteDetailsActivity"
             android:screenOrientation="portrait" 
            android:configChanges="keyboardHidden|orientation" /> 
            
        <activity 
            android:name=".activity.AccountSettingActivity"
             android:screenOrientation="portrait" 
            android:configChanges="keyboardHidden|orientation" /> 
         
         <activity 
            android:name=".activity.AccountAddActivity"
             android:screenOrientation="portrait" 
             android:configChanges="keyboardHidden|orientation" /> 
             
         <activity 
             android:name=".activity.BudgetActivity"
             android:screenOrientation="portrait" 
             android:configChanges="keyboardHidden|orientation" /> 
    </application>

</manifest>
